{
  "openapi": "3.0.0",
  "info": {
    "title": "Serviço de agendamento de consulta",
    "description": "Essa API é responsável pelo agendamento e gerenciamento de consultas.",
    "version": "1.0.0"
  },
  "paths": {
    "/specialties": {
      "post": {
        "tags": [
          "Specialties"
        ],
        "security": [{
          "bearerAuth": []
        }],
        "description": "Cadastrar especialidade do médico.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SpecialtiesRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SpecialtiesResponse"
                }
              }
            }
          },
          "409": {
            "description": "Specialty already exists!"
          },
          "422": {
            "description": "Name is required!"
          },
          "500": {
            "description": "Internal server error!"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Autenticação do usuário.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token gerado."
          },
          "401": {
            "description": "Mensagem de erro."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SpecialtiesRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da especialidade.",
            "example": "Ortopedia"
          },
          "description": {
            "type": "string",
            "description": "Descrição da especialidade.",
            "example": "Área responsável pelo cuidado da saúde relacionada aos elementos do aparelho locomotor, como ossos, músculos, ligamentos e articulações."
          }
        },
        "required": [
          "name",
          "description"
        ]
      },
      "SpecialtiesResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da especialidade.",
            "example": "Ortopedia"
          },
          "description": {
            "type": "string",
            "description": "Descrição da especialidade.",
            "example": "Área responsável pelo cuidado da saúde relacionada aos elementos do aparelho locomotor, como ossos, músculos, ligamentos e articulações."
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Username do usuário.",
            "example": "username_test"
          },
          "password": {
            "type": "string",
            "description": "Senha do usuário.",
            "example": "12345678"
          }
        },
        "required": [
          "username",
          "password"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "description": "Autenticação da API",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "tokenUrl": "http://localhost:3434/login"
      }
    }
  }
}